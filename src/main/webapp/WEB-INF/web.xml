<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>MyFirstServlet</display-name>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>controller.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>iterator</servlet-name>
        <servlet-class>controller.SecondServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>iterator</servlet-name>
        <url-pattern>/iterator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manufacturers</servlet-name>
        <servlet-class>controller.ManufacturersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mobiles</servlet-name>
        <servlet-class>controller.MobileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mobiles</servlet-name>
        <url-pattern>/mobiles</url-pattern>
    </servlet-mapping>


</web-app>